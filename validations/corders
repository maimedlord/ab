{
  $jsonSchema: {
    bsonType: 'object',
    required: [
      'orderID',
      'dateOpen',
      'dateClose',
      'level',
      'subject',
      'contractType',
      'changeLog',
      'cmessageLogID',
      'status'
    ],
    properties: {
      orderID: {
        bsonType: 'string',
        description: 'required: orderID'
      },
      dateOpen: {
        bsonType: 'string',
        description: 'required: dateOpen'
      },
      dateClose: {
        bsonType: 'string',
        description: 'required: dateClose'
      },
      level: {
        bsonType: 'string',
        description: 'required: level',
        pattern: '^high school$|^undergraduate$|^graduate$'
      },
      subject: {
        bsonType: 'string',
        description: 'required: subject',
        pattern: '[a-z ]+'
      },
      contract: {
        bsonType: 'object',
        description: 'required: contractType'
      },
      changeLog: {
        bsonType: 'array',
        description: 'required: changeLog'
      },
      cmessageLogID: {
        bsonType: 'string',
        description: 'required: cmessageLogID'
      },
      status: {
        bsonType: 'array',
        description: 'required: status'
      }
    }
  }
}