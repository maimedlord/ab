{
  $jsonSchema: {
    bsonType: 'object',
    required: [
      'active',
      'email',
      'pass',
      'uName',
      'joinDate',
      'orders'
    ],
    properties: {
      active: {
        bsonType: 'bool',
        description: 'required: active'
      },
      email: {
        bsonType: 'string',
        description: 'required: email'
      },
      pass: {
        bsonType: 'string',
        description: 'required: pass',
        minLength: 12,
        maxLength: 64
      },
      uName: {
        bsonType: 'string',
        description: 'required: uName'
      },
      joinDate: {
        bsonType: 'string',
        description: 'required: joinDate'
      },
      orders: {
        bsonType: 'array',
        description: 'required: array of order objects'
      }
    }
  }
}