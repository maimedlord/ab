{
  $jsonSchema: {
    bsonType: 'object',
    required: [
      'active',
      'email',
      'pass',
      'uName',
      'joinDate',
      'timezone',
      'reviewHistory'
    ],
    properties: {
      active: {
        bsonType: 'bool',
        description: 'required: active'
      },
      email: {
        bsonType: 'string',
        description: 'required: email'
      },
      pass: {
        bsonType: 'string',
        description: 'required: pass'
      },
      uName: {
        bsonType: 'string',
        description: 'required: uName'
      },
      joinDate: {
        bsonType: 'date',
        description: 'required: joinDate'
      },
      timezone: {
        bsonType: 'string',
        description: 'user: timezone'
      },
      reviewHistory: {
        bsonType: 'array',
        description: 'user: reviewHistory',
        minItems: 0,
        uniqueItems: true,
        items: {
          bsonType: 'object',
          description: 'user: reviewHistory item',
          required: [
            'comment',
            'contract',
            'rating',
            'reviewer',
            'time'
          ],
          properties: {
            comment: {
              bsonType: 'string',
              description: 'user: reviewHistory: review'
            },
            contract: {
              bsonType: 'objectId',
              description: 'user: reviewHistory: contract'
            },
            rating: {
              bsonType: 'double',
              description: 'user: reviewHistory: rating'
            },
            reviewer: {
              bsonType: 'objectId',
              description: 'user: reviewHistory: reviewer'
            },
            time: {
              bsonType: 'date',
              description: 'user: reviewHistory: time'
            }
          }
        }
      }
    }
  }
}